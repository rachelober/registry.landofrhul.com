<% form_for([:admin, @group]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :leader %><br />
		<%= f.select :leader_id, select_group_leader, { :include_blank => true } %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :flags %><br />
    <%= f.text_field :flags %>
  </p>
  <p>
    <%= f.label :species_id %><br />
		<%= f.select :species_id, select_species, { :include_blank => true } %>
  </p>
  <p>
    <%= f.label :owner_id %><br />
		<%= f.select :owner_id, select_owner, { :include_blank => true } %>
  </p>
  <p>
    <%= f.submit button_name %>
  </p>
<% end %>