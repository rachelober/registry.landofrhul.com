<h1><%= owner_display(@owner) %></h1>

<p>
  <b>Email:</b>
  <%=h @owner.email %>
</p>

<p>
  <b>Url:</b>
  <%=h @owner.url %>
</p>

<p>
	<b>Groups Owned:</b>
	<% @owner.groups.each do |group| %>
		<br/>
		<%= group_name(group)%>
	<% end %>
</p>

<p>
	<b>Pets Owned:</b>
</p>
<% @species.each do |species| %>
<table>
	<tr>
		<th colspan="2"><%= h species.name %></th>
	</tr>
  <tr>
    <th>Name</th>
		<th>Gender</th>
  </tr>

	<% if @owner.find_pets_by_species(species).empty? %>
	<tr>
		<td colspan="2">None</td>
	</tr>
	<% else %>
		<% @owner.find_pets_by_species(species).each do |pet| %>
  <tr>
    <td><%= pet_display(pet) %></td>
		<td><%= h pet.gender %>
  </tr>
		<% end %>
	<% end%>
</table>
<% end %>

<%= link_to 'Back', owners_path %>