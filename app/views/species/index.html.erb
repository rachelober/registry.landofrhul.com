<h1>Listing species</h1>

<table>
  <tr>
    <th>Name</th>
		<th>Count</th>
		<th>Females Count</th>
		<th>Males Count</th>
  </tr>

<% @species.each do |species| %>
  <tr>
    <td><%= species_display(species) %></td>
		<td><%= h species.pets.count %></td>
		<td><%= h species.females.count %></td>
		<td><%= h species.males.count %></td>
  </tr>
<% end %>
</table>